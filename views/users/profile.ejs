
<% layout("/layouts/boilerplate") %>

<link rel="stylesheet" href="/CSS/style.css">

<div class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-card text-center">
                <img src="https://i.pravatar.cc/150?u=<%= user.username %>" alt="User Avatar" class="profile-avatar mb-3">
                <h2 class="h4"><%= user.name %></h2>
                <p class="text-muted">@<%= user.username %></p>
                <% if (user.createdAt) { %>
                    <p class="text-muted"><small>Joined on <%= new Date(user.createdAt).toLocaleDateString('en-US', { month: 'long', year: 'numeric' }) %></small></p>
                <% } %>
            </div>
        </div>

        <div class="col-md-8">
            <div class="profile-details">
                <h3 class="mb-4">Account Details</h3>
                <ul class="list-group list-group-flush details-list">
                    <li class="list-group-item"><i class="bi bi-person-fill me-2 text-muted"></i><strong>Full Name:</strong> <%= user.name %></li>
                    <li class="list-group-item"><i class="bi bi-envelope-fill me-2 text-muted"></i><strong>Email:</strong> <%= user.email %></li>
                    <li class="list-group-item"><i class="bi bi-telephone-fill me-2 text-muted"></i><strong>Mobile:</strong> <%= user.mobile %></li>
                </ul>

                <hr class="my-4">
                
                <h4 class="h5 mb-3">Manage Your Account</h4>
                <div class="list-group">
                    <a href="/bookings" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                       <b> My Trips</b>
                        <i class="bi bi-suitcase-lg"></i>
                    </a>
                    <a href="wishlist" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                      <b>  My Wishlist</b>
                        <i class="bi bi-heart-fill"></i>
                    </a>
                    <a href="/profile/edit" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                      <b>  Edit Profile</b>
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 

