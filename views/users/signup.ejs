
    <title>Sign Up - Wanderlust</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

  
  <link rel="stylesheet" href="/CSS/signUp.css">
    <div class="auth-container">
        <div class="auth-image-panel d-none d-md-block"></div>
        <div class="auth-form-panel">
            <div class="form-wrapper">
                <div class="text-center mb-4">
                    <i class="fa-brands fa-airbnb brand-icon"></i>
                    <h1 class="h3 mt-2 fw-bold">Create an Account</h1>
                </div>

                <% if(error && error.length) { %>
                    <div class="alert alert-danger" role="alert"><%= error %></div>
                <% } %>

                <form action="/signup" method="POST" novalidate>
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" id="name" name="name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" id="username" name="username" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="mobile" class="form-label">Mobile Number</label>
                        <input type="tel" id="mobile" name="mobile" class="form-control" required />
                    </div>
                    <div class="mb-3 position-relative">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" id="password" name="password" class="form-control" required />
                        <span id="password-toggle-icon" class="password-toggle"><i class="fa-solid fa-eye"></i></span>
                    </div>
                    <button class="btn btn-auth w-100" type="submit">Sign Up</button>
                </form>

                <div class="text-center mt-4">
                    <p class="text-muted">Already have an account? <a href="/login">Log In</a></p>
                </div>
            </div>
        </div>
    </div>

 <script src="/js/loginSignup.js"></script>



